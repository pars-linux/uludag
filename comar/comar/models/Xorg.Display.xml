        <method name="enable"/>
        <method name="disable"/>
        <method name="probe">
            <arg name="device" type="a{ss}" direction="in"/>
            <arg name="result" type="a{ss}" direction="out"/>
        </method>
        <method name="getOptions">
            <arg name="device" type="a{ss}" direction="in"/>
            <arg name="options" type="a{ss}" direction="out"/>
        </method>
    </interface>
