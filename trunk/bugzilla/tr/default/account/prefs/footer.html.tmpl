[%# INTERFACE:
  # mybugslink: boolean. True if the user wishes the My Bugs link to appear. 
  # queries: array of hashes. May be empty. Each hash has two members:
  #   name:   string. The name of the query.
  #   footer: boolean. True if the query appears in the footer.
  #%]
 
<table>
  <tr>
    <th align="right">'Benim hata raporlarım' bağı:</th>
    <td>
      <select name="mybugslink">
        <option value="1">her sayfanın altında gösterilmeli</option>  
        <option value="0" 
          [% " selected" IF NOT mybugslink %]>gösterilmemeli
        </option>  
      </select>
    </td>
  </tr>    
    
  <input type="hidden" name="numqueries" value="[% queries.size %]">
  [% IF queries.size %]
    [% FOREACH query = queries %]
      <tr>
        <th align="right">'[% query.name FILTER html %]' isimli sorgunuz:</th>
        <td>
          <select name="query-[% loop.index %]">
            <option value="0">sadece sorgulama sayfasında gösterilmeli</option>  
            <option value="1" 
              [% " selected" IF query.footer %]>
              her sayfanın altında gösterilmeli
            </option>  
          </select>
        </td>
      </tr>

      <input type="hidden" name="name-[% loop.index %]" 
             value="[% query.name FILTER html %]">
    [% END %]

  [% ELSE %]
    <tr>
      <td colspan="4">
        <br>                            
        Eğer  
        <a href="query.cgi">sorgulama sayfasını</a> kullanarak sorgu kayıtları oluşturursanız,
        bu sayfayı tekrar ziyaret ederek hangilerinin her Bugzilla sayfasının altında  
        gösterileceğini seçebilirsiniz.
        <br>
        <br>
      </td>
    </tr>
  [% END %]
    
</table>
