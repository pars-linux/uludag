			<!-- Header: Logo and Welcome -->
			<item type="rect" id="header">
				<pos y="50%" x="50%" anchor="c" width="100%" height="box"/>
				<normal color="#000000" alpha="0"/>
				
				<!-- HLayout -->
				<box orientation="horizontal" spacing="20">
					
					<!-- hspacer expanding -->
					<item type="rect" id="spacer1">
						<pos expand="true"/>
					</item>
					
					<!-- pardus logo -->
					<item type="pixmap" id="logo">
						<pos y="10"/>
						<normal file="logo2011.png"/>
					</item>
					
					
					<!-- Welcome Message -->
					<item type="label" id="welcome">
						<pos />
						<normal color="#2d2d2d" font="Sans 28"/>
						<stock type="welcome-label"/>
					</item>
					
					<!-- hspacer expanding -->
					<item type="rect" id="spacer1">
						<pos expand="true"/>
					</item>
				</box>
				
			</item>
			
			<!-- vspacer expanding -->
			<item type="rect" id="spacer1">
				<pos height="20"/>
			</item>
			
			<!-- dark belt -->
