<?xml version="1.0"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<greeter>

<!-- arkaplan -->
<item type="pixmap">
	<normal file="background.jpg"/>
	<pos x="0" y="0" width="100%" height="100%"/>
</item>


<!-- saat -->
<item type="label" id="clock">
	<normal color="#444444" font="Sans Bold 10"/>
	<pos anchor="nw" x="%40" y="%5"/>
	<text>%c</text>
</item>


<item type="rect">
    <pos x="%50" y="%65" anchor="nw" height="box" width="box"/>
    <box orientation="horizontal" homogenous="false" spacing="8">
        <item type="pixmap" id="login_button" button="true">
            <normal file="login.png" tint="#dddddd"/>
            <prelight file="login.png"/>
            <active file="login.png" tint="#e07070"/>
        </item>
        <item type="label">
            <pos y="%25"/>
            <normal color="#444444" font="Sans Bold 8"/>
            <stock type="login"/>
        </item>
    </box>
</item>



<item type="rect">
    <pos x="%50" y="%68" anchor="nw" height="box" width="box"/>
    <box orientation="horizontal" homogenous="false" spacing="8">
        <item type="pixmap" id="shutdown_button" button="true">
            <normal file="exit.png" tint="#dddddd"/>
            <prelight file="exit.png"/>
            <active file="exit.png" tint="#e07070"/>
        </item>
        <item type="label">
            <pos y="%25"/>
            <normal color="#444444" font="Sans Bold 8"/>
            <stock type="quit"/>
        </item>
    </box>
</item>

<!-- kullanıcı listesi -->
<item type="rect" id="userlist">
    <pos anchor="nw" x="%50" y="%45" height="%10" width="%20"/>
</item>

<!-- kullanıcı ve parola alanları -->
<item type="rect">
	<pos anchor="nw" x="%50" y="%60" height="box" width="box"/>
	<box orientation="horizontal" spacing="10">
		<item type="rect">
			<pos width="box" height="box"/>
            <box orientation="vertical" homogenous="true" spacing="10">
	            <!-- kullanıcı adı sorusu -->
				<item type="label">
                    <pos y="25%"/>
					<normal color="#444444" font="Sans Bold 8"/>
					<stock type="username-label"/>
				</item>
 				<!-- parola sorusu -->
				<item type="label">
                    <pos y="25%"/>
					<normal color="#444444" font="Sans Bold 8"/>
					<stock type="password-label"/>
				</item>
	        </box>
        </item>
        <item type="rect">
            <pos width="box" height="box"/>
            <box orientation="vertical" homogenous="box" spacing="8">
				<!-- kullanıcı adı giriş yeri -->
				<item type="entry" id="user-entry">
                    <pos width="100" height="20"/>
                </item>
    			<!-- parola giriş yeri -->
				<item type="entry" id="pw-entry">
                    <pos width="100" height="20"/>
                </item>
			</box>
		</item>
	</box>
</item>

<!-- hata mesajı -->
<item type="label" id="pam-error">
	<pos anchor="c" x="%50" y="75%"/>
	<normal color="#FFFFFF" font="Sans Bold 12"/>
</item>

<!-- capslock uyarısı -->
<item type="rect" id="caps-lock-warning">
	<normal color="#252525" alpha="0.5"/>
	<pos anchor="nw" x="%42" y="77%" width="box" height="box"/>
	<box orientation="vertical" xpadding="6" ypadding="6">
		<item type="label">
			<normal color="#ffffff" font="Sans Bold 12"/>
			<pos anchor="nw" x="0" y="0"/>
			<stock type="caps-lock-warning"/>
		</item>
	</box>
</item>


</greeter>
