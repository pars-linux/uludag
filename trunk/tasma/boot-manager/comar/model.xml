<?xml version="1.0" ?>
<comarModel>
    <group name="System">
        <class name="Boot">
            <method name="listOptions" access="guest"/>
            <method name="getOption" access="guest">
                <argument>key</argument>
            </method>
            <method name="setOption">
                <argument>key</argument>
                <argument>value</argument>
            </method>
            <method name="listEntries" access="guest"/>
            <method name="getEntry" access="guest">
                <argument>index</argument>
            </method>
            <method name="addEntry">
                <argument>title</argument>
                <argument>commands</argument>
            </method>
            <method name="removeEntry">
                <argument>index</argument>
            </method>
            <method name="renameEntry">
                <argument>index</argument>
                <argument>title</argument>
            </method>
            <method name="updateEntry">
                <argument>index</argument>
                <argument>commands</argument>
            </method>
            <method name="updateKernelEntry">
                <argument>version</argument>
            </method>
            <notify name="changed" access="guest"/>
        </class>
    </group>
</comarModel>
