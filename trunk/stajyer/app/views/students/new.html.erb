<h1>New student</h1>

<% form_for @student, :html => { :multipart => true } do |f| %>
<%= f.error_messages %>

<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :university %><br />
  <%= f.text_field :university %>
</p>
<p>
  <%= f.label :major %><br />
  <%= f.text_field :major %>
</p>
<p>
  <%= f.label :year %><br />
  <%= f.text_field :year %>
</p>
<p>
  <%= f.label :cover %><br />
  <%= f.text_area :cover %>
</p>
<p>
  <% f.fields_for :documents, :html => { :multipart => true } do |df| -%>
  <%= render :partial => 'upload', :locals => { :form => df } %>
  <% end -%>
</p>
<p>
  <%= f.submit 'Create' %>
</p>
<% end %>
