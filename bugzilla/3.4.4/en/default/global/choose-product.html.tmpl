[%# INTERFACE:
  # classifications: array of hashes, with an 'object' key representing a
  #                  classification object and 'products' the list of
  #                  product objects the user can enter bugs into.
  # target:   the script that displays this template.
  # cloned_bug_id: ID of the bug being cloned.
  # format:   the desired format to display the target.
  #%]

[% PROCESS global/variables.none.tmpl %]

[% IF target == "enter_bug.cgi" %]
  [% title = "Enter $terms.Bug" %]
  [% subheader = BLOCK %]First, you must pick a product on which to enter [% terms.abug %]. [% END %]
[% ELSIF target == "describecomponents.cgi" %]
  [% title = "$terms.Bugzilla Component Descriptions" %]
  [% subheader = "Please specify the product whose components you want described." %]
[% END %]

[% DEFAULT title = "Choose a Product" %]
[% PROCESS global/header.html.tmpl %]

<table align="center">

[% FOREACH c = classifications %]
  [% IF c.object %]
    <tr>
      <th colspan="2" align="left">[% c.object.name FILTER html %]:
      [%+ c.object.description FILTER html_light %]</th>
    </tr>
  [% END %]

  [% FOREACH p = c.products %]
    <tr>
      <td valign="top">
      <table>
      <tr>
      <td rowspan="3">
        <a href="[% target %]?product=[% p.name FILTER url_quote -%]
              [%- IF cloned_bug_id %]&amp;cloned_bug_id=[% cloned_bug_id FILTER url_quote %][% END -%] 
              [%- IF format %]&amp;format=[% format FILTER url_quote %][% END %]">
              [% IF p.name== "Bugzilla" %]
              <img height="50" width="50" src="icons/bugzilla.jpg" border="0">
              [% END %]
              [% IF p.name=="Çeviriler /Translation" %]
              <img height="50" width="50" src="icons/translation.png" border="0">
              [% END %]
              [% IF p.name=="COMAR / Config Manager" %]
              <img height="50" width="50" src="icons/comar.png" border="0">
              [% END %]
              [% IF p.name=="Grafik / Graphics" %]
              <img height="50" width="50" src="icons/graphics.png" border="0">
              [% END %]
              [% IF p.name=="Güvenlik / Security" %]
              <img height="50" width="50" src="icons/security.png" border="0">
              [% END %]
              [% IF p.name=="Listeler / Lists" %]
              <img height="50" width="50" src="icons/lists.png" border="0">
              [% END %]
              [% IF p.name=="Package problems - Paket sorunları" %]
              <img height="50" width="50" src="icons/packages.png" border="0">
              [% END %]
              [% IF p.name=="Pardus Hizmetleri / Pardus Services" %]
              <img height="50" width="50" src="icons/services.png" border="0">
              [% END %]
              [% IF p.name=="PiSi" %]
              <img height="50" width="50" src="icons/pisi.png" border="0">
              [% END %]
              [% IF p.name=="review" %]
              <img height="50" width="50" src="icons/review.png" border="0">
              [% END %]
              [% IF p.name=="TASMA" %]
              <img height="50" width="50" src="icons/tasma.png" border="0">
              [% END %]
              [% IF p.name=="YALI" %]
              <img height="50" width="50" src="icons/yali.png" border="0">
              [% END %]
              </a>&nbsp;
     </td>
     </tr>
     <tr>
      <td>
        <a href="[% target %]?product=[% p.name FILTER url_quote -%]
              [%- IF cloned_bug_id %]&amp;cloned_bug_id=[% cloned_bug_id FILTER url_quote %][% END -%] 
              [%- IF format %]&amp;format=[% format FILTER url_quote %][% END %]">
        [% p.name FILTER html FILTER no_break %]</a>:&nbsp;
      </td>
      </tr>
      <tr>
      <td>[% p.description FILTER html_light %]</td>
      </tr>
      </table>
    </tr>
  [% END %]

  <tr>
    <th colspan="2">&nbsp;</th>
  </tr>
[% END %]

</table>

[% PROCESS global/footer.html.tmpl %]
