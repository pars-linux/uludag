[% PROCESS global/header.html.tmpl 
  title = "Detaylı Hata Raporu Listeleme"
%]

[% IF bugs.first %]
  [% FOREACH bug = bugs %]
    [% PROCESS bug_display %]
  [% END %]
[% ELSE %]
  <p>
    Birkaç hata raporu numarası verebilseydiniz biraz daha şansınız olabilirdi.
  </p>
[% END %]

[% PROCESS global/footer.html.tmpl %]


[%###########################################################################%]
[%# Block for an individual bug                                             #%]
[%###########################################################################%]

[% BLOCK bug_display %]
  <img src="/bugzilla/1x1.gif" width="1" height="80" align="left">
  <div align="center">
    <b>
      <font ="+3">Bug [% bug.bug_id %] - [% bug.short_desc FILTER html %]</font>
    </b>
  </div>

  <table width="100%">
    <tr>
      <td>
        <b>Hata Kayıt Numarası:</b>
        <a href="show_bug.cgi?id=[% bug.bug_id %]">[% bug.bug_id %]</a>
      </td>
      [% PROCESS cell attr = { description => "Ürün", 
                               name => "product" } %]
      [% PROCESS cell attr = { description => "Sürüm", 
                               name => "version" } %]
      [% PROCESS cell attr = { description => "Donanım", 
                               name => "rep_platform" } %]
    </tr>
    
    <tr>
      [% PROCESS cell attr = { description => "İşletim sistemi/Sürümü", 
                               name => "op_sys" } %]
      [% PROCESS cell attr = { description => "Durum", 
                               name => "bug_status" } %]
      [% PROCESS cell attr = { description => "Önem", 
                               name => "bug_severity" } %]
      [% PROCESS cell attr = { description => "Öncelik", 
                               name => "priority" } %]
    </tr>
    
    <tr>
      [% PROCESS cell attr = { description => "Çözüm", 
                               name => "resolution" } %]
      [% PROCESS cell attr = { description => "Atanan Kişi", 
                               name => "assigned_to" } %]
      [% PROCESS cell attr = { description => "Raporlayan", 
                               name => "reporter" } %]
      [% IF Param('useqacontact') %]
        [% PROCESS cell attr = { description => "Kalite Sorumlusu", 
                                 name => "qa_contact" } %]
      [% END %]
    </tr>
    
    <tr>
      <td colspan="2">
        <b>Bileşen:</b>&nbsp;
        [% bug.component %]
      </td>
    
      <td colspan="2">
      [% IF Param('usetargetmilestone') %]
          <b>Hedef Mihenk Taşı:</b>&nbsp;
          [% bug.target_milestone FILTER html %]
      [% END %]
      </td>
    </tr>
    
    <tr>
      <td colspan="4">
        <b>Web Adresi:</b>&nbsp;
        <a href="[% bug.bug_file_loc FILTER html %]">
                 [% bug.bug_file_loc FILTER html %]</a> 
    </tr>
    
    <tr>
      <td colspan="4">
        <b>Özet:</b>&nbsp;[% bug.short_desc FILTER html %]
      </td>
    </tr>
     
    [% IF use_keywords %]
      <tr>
        <td colspan="4">
          <b>Anahtar Kelimeler: </b>&nbsp;[% bug.keywords FILTER html %]
        </td>
      </tr>
    [% END %]

    [% IF Param("usestatuswhiteboard") %]
      <tr>
        <td colspan="4">
          <b>Durum Tahtası:</b>&nbsp;
          [% bug.status_whiteboard FILTER html %]
        </td>
      </tr>
    [% END %]

    <tr>
      <td colspan="4">
        <b>Açıklama:</b>
      </td>
    </tr>
  </table>

  [% PROCESS bug/comments.html.tmpl 
     comments = bug.comments %]
  
  <hr>
[% END %]


[%###########################################################################%]
[%# Block for standard table cells                                          #%]
[%###########################################################################%]

[% BLOCK cell %]
  <td>
    <b>[% attr.description%]:</b>&nbsp;
    [% bug.${attr.name} FILTER html %]
  </td>
[% END %]
