import sys

import gettext
__trans = gettext.translation('pisi', fallback=True)
_ = __trans.ugettext

from pisi.cli.pisicli import PisiCLI

def handle_exception(exception, value, tb):
    import traceback
    import exceptions

    import pisi.ui
    import pisi.context as ctx
    from pisi.xmlext import XmlError

    ui = pisi.cli.CLI()
    traceback = False
    if exception == exceptions.KeyboardInterrupt:
        ui.error(_("\nKeyboardInterrupt: Exiting...\n"))
        sys.exit(1)
    elif exception == XmlError:
        ui.error(str(value))
        sys.exit(1)
    elif exception == pisi.Exception:
        ui.error(_("""
Internal PISI Error:
Please file a bug report! (http://bugs.uludag.org.tr)
"""))
        traceback = True
    elif exception == pisi.Error:
        ui.error(_("Fatal Error:"))
        traceback = ctx.options and ctx.options.debug

    ui.error("%s" %exception)
    ui.error("%s\n" %value)

    if traceback:
        ui.info(_("Traceback:"))
        traceback.print_tb(tb)

    sys.exit(1)

if __name__ == "__main__":

    sys.excepthook = handle_exception

    cli = PisiCLI()
    cli.run_command()
