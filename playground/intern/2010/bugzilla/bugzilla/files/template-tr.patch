+        [% bug.${field.name} FILTER bug_link(bug.${field.name}) FILTER none %]
+    [% END %]
+[% ELSE %]
+  [% value.join(', ') FILTER html %]
+[% END %]
+[% '</td>' IF NOT no_tds %]
