    $IPTABLES -A INPUT -p tcp -m tcp  --dport 5222:5223  -m state --state NEW  -j RULE_2
    $IPTABLES -A FORWARD -p tcp -m tcp  --dport 5222:5223  -m state --state NEW  -j RULE_2
    $IPTABLES -A RULE_2  -j ULOG  --ulog-nlgroup 1 --ulog-prefix "RULE 2 -- ACCEPT " --ulog-qthreshold 1
