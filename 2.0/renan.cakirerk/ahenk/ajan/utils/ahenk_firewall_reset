    $IPTABLES -A INPUT -p tcp -m tcp  -m multiport  --dports 389,636  -m state --state NEW  -j RULE_1
    $IPTABLES -A FORWARD -p tcp -m tcp  -m multiport  --dports 389,636  -m state --state NEW  -j RULE_1
    $IPTABLES -A RULE_1  -j ULOG  --ulog-nlgroup 1 --ulog-prefix "RULE 1 -- ACCEPT " --ulog-qthreshold 1
    $IPTABLES -A RULE_1  -j ACCEPT
